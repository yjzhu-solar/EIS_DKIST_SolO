def get_line_segs(x, ys, *args, **kwargs):
    ny, nx = ys.shape

    segs = np.zeros((ny, nx, 2))
    segs[:,:,1] = ys
    segs[:,:,0] = x

    return LineCollection(segs, *args, **kwargs)


